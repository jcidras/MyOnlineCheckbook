@model OnlineCheckbook.Models.User

@{
    ViewBag.Title = "Profile - Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("EditUserPost", "User", FormMethod.Post))
{ 
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Username")
            @Html.TextBoxFor(modelItem => modelItem.Username, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.Label("Password")
            @Html.PasswordFor(modelItem => modelItem.Password, new { @class = "form-control" })
        </div>
        <input type="submit" value="Update" class="btn btn-default" />
        @Html.ActionLink("Cancel", "UserDetails", new {}, new { @class = "btn btn-default" })
    </div>
}

