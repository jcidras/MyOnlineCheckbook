@model OnlineCheckbook.Models.User

@using (Html.BeginForm("Login", "Home"))
{ 
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">            
            @Html.Label("Username:")
            @Html.TextBoxFor(modelItem => modelItem.Username, new { @class = "form-control" })                                    
        </div>
        <div class="form-group">
            @Html.Label("Password:")
            @Html.PasswordFor(modelItem => modelItem.Password, new { @class = "form-control" })
        </div>   
        <input type="submit" value="Login" class="btn btn-default" />
        <br />
        @Html.ActionLink("Don't have an account?", "Create", "Home")
    </div>
}

