@model OnlineCheckbook.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Login", "Home"))
{ 
    @Html.AntiForgeryToken()
    @Html.ValidationMessage("", new { @class = "text-danger" })
    <div class="form-horizontal">
        <div class="form-group">            
            @Html.Label("Username:")
            @Html.TextBoxFor(modelItem => modelItem.Username, new { @class = "form-control" })                                    
        </div>
        <div class="form-group">
            @Html.Label("Password:")
            @Html.PasswordFor(modelItem => modelItem.Password, new { @class = "form-control" })
        </div>   
        <input type="submit" value="Login" class="btn btn-default" />
        <br />
        @Html.ActionLink("Don't have an profile?", "Create", "User")
    </div>
}

