@model OnlineCheckbook.Models.User

@using (Html.BeginForm("Login", "Home"))
{ 
    @Html.AntiForgeryToken()
    <div class="col-md-4">
        <div class="form-group">            
            @Html.Label("Username:")
            @Html.TextBoxFor(modelItem => modelItem.Username, new { htmlAttributes = new { @class = "form-control" } })                                    
        </div>
        <div class="form-group">
            @Html.Label("Password:")
            @Html.PasswordFor(modelItem => modelItem.Password, new { htmlAttributes = new { @class = "form-control" } })
        </div>   
        <input type="submit" value="Login" />
        <br />
        @Html.ActionLink("Don't have an account?", "Create", "Home")
    </div>
}

